@model Pog.Models.ViewModel.CommentViewModel
@{
}
<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Leave a Reply</h4>
    <p class="alert alert-danger">
        Your email address will not be published. When you turn on "Anonymous Post".<br />
        <strong class="text-danger">!!!!!!!!(Note that when posting a comment, it cannot be revoked or modified)!!!!!!!!</strong>
    </p>
    <hr />
    <form asp-action="Comment" method="post" asp-controller="Topics">
        <input asp-for="CommentId" type="hidden" />
        <input asp-for="TopicId" type="hidden" />
        <input asp-for="UserId" type="hidden" />
        <input asp-for="TopicDueDateId" type="hidden" />
        <div class="form-group">
            <label asp-for="CommentText" class="control-label"></label>
            <textarea asp-for="CommentText" class="form-control"></textarea>
            <span asp-validation-for="CommentText" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IsAnonymous" class="control-label">Anonymous Post </label>
            <input name="IsAnonymous" id="toggle" class="toggle-control" type="checkbox" value="true"
                   data-val-required="The IsEnabled field is required." data-val="true"
                   data-bind="checked: IsEnabled" />
            <label for="toggle"></label>
        </div>
        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Post Comment </button>
        </div>
    </form>

</div>

