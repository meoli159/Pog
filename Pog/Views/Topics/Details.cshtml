@using Pog.Models.ViewModel
@model Topic

<link rel="stylesheet" href="~/css/Style.css" type="text/css" media="all" />

@{
    ViewData["Title"] = "Details";
}

<div class="py-5 w3l-homeblock1 text-center">
    <div class="container mt-md-3">
        <h3 class="blog-desc-big text-center mb-4">@Html.DisplayFor(model => model.Name)</h3>
        <div class="blog-post-align">
            <div class="blog-post-img">
                <a href="author.html"><img src="~/images/avatar.jpg" alt="" class="rounded-circle img-fluid" /></a>
            </div>
            <div class="blog-post-info">
                <div class="author align-items-center mb-1">
                    <a href="#">
                        <strong>
                            @if (@Model.IsAnonymous is true)
                            {
                                @Html.LabelFor(model => model.User.UserName, "Anonymous")
                                ;
                            }
                            else
                            {
                                @Html.DisplayFor(model => model.User.UserName)
                            }
                        </strong>
                    </a>
                </div>
                <ul class="blog-meta">
                    <li class="meta-item blog-lesson">
                        <span class="meta-value">@Html.DisplayFor( model => model.DateCreate)</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="display-ad" style="margin: 8px auto; display: block; text-align:center;">
    <!---728x90--->
</div>


